{{! Set the main content of the dashboard }}
<div>
  <h1>Dashboard</h1>
  <a href="/create-post" class="create-post-button">Create New Post</a>

  <section class="blog-posts">
    <h2>Your Blog Posts</h2>
    {{! Iterate over user's blog posts }}
    {{#each userBlogposts as |blogPost|}}
      {{! Display the blog post information }}
      <div class="blog-post-itself">
        <h2 class="blog-post-title">{{blogPost.title}}</h2>
        <p>{{blogPost.content}}</p>
        <p>Author: {{blogPost.user.username}}</p>
        <p>Created on: {{blogPost.created_at}}</p>

<a href="/update-blogpost/{{blogPost.id}}" class="update-post-button" data-post-id="{{blogPost.id}}">Update</a>        <a href="/delete-post" class="delete-post-button">Delete</a>
      </div>
    {{/each}}
  </section>
</div>
<script src="/js/update-blogpost.js"></script>