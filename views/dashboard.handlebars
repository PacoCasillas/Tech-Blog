{{#section 'body'}}
  <section class="blog-posts">
    <h2>Your Blog Posts</h2>
    {{!-- Iterate over user's blog posts --}}
    {{#each userBlogPosts}}
      {{> partials/post}}
    {{/each}}

    <a href="/create-post">Add New Blog Post</a>
  </section>
{{/section}}