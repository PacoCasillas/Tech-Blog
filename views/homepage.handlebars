{{#each allBlogPosts as |blogPost|}}
  {{! Display the blog post information }}
  <h2>{{blogPost.title}}</h2>
  <p>{{blogPost.content}}</p>
  <p>Author: {{blogPost.User.username}}</p>

  {{! Display the comments }}
  <h3>Comments</h3>
  {{#each blogPost.Comments}}
    <p>{{this.content}}</p>
    <p>Comment by: {{this.User.username}}</p>
  {{/each}}

  <div class="comments">
    <h4>Comments</h4>
    {{! Iterate over comments }}
    {{#each comments}}
      <div class="comment">
        <p>{{content}}</p>
        <p>Comment by {{username}} on {{date}}</p>
      </div>
    {{/each}}
  </div>

{{/each}}

<script src="/js/comment.js"></script>